<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false">
        <layer-list>
            <item android:left="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_2" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_1" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_2" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_4" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>