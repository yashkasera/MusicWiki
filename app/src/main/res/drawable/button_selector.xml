<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_2" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/purple_1" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="16dp" android:left="36dp" android:right="36dp" android:top="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_1" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#312F42" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:bottom="4dp" android:right="4dp" >
                <shape android:shape="rectangle">
                    <solid android:color="#534E81" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="16dp" android:left="36dp" android:right="36dp" android:top="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>